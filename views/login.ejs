<%# Input Header (which is mostly the links to CSS-styling) for the page. %>
<%- include('header'); -%>
  <div class="container userContainerLog">
    <div class="col-sm-6 col-sm-offset-3">

        <h1 id= "welcomeBack"> Welcome Back :) </h1> <br>
        <h1 id= "welcomeBack"> Login</h1>

        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <%# when you submit the form, it be related to the /login post. %>
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Login</button>
        </form>

        <hr>

        <p> Don't have an account yet? <a href="/signup">Signup</a></p>
        <p>Or go <a href="/">home</a>.</p>


    </div>
  </div>
<%- include('footer'); -%>
